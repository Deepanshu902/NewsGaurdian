{
  "manifest_version": 3,
  "name": "NewsGuardian",
  "version": "1.0",
  "description": "Fact-checks selected text using AI to identify potential fake news.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://openrouter.ai/api/*"
  ],
  "action": {
    "default_popup": "./popup/popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
  
}
